{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Build all files (use main.cpp)",
            "command": "D:\\env\\msys2\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fopenmp",
                "-std=c++11",
                "-static",
                "-fdiagnostics-color=always",
                "-g",
                "main.cpp",
                "source\\data.cpp",
                "source\\mesh.cpp",
                "source\\Spmat.c",
                "-o",
                "${workspaceFolder}\\data.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}